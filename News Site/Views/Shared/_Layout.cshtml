    <style>
        #page-container {
            position: relative;
            min-height: 100vh;
        }

        body {
            /*Line 1*/
            display: flex;
            /*Line 2*/
            flex-direction: column;
            /*Line 3*/
            min-height: 100vh;
        }

        .wrapper {
            /*Line 4*/
            flex: 1;
        }

        h6 {
            display: block;
            font-size: 0.67em;
            margin-block-start: 2.33em;
            margin-block-end: 2.33em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            font-weight: bold;
        }

        .h6, h6 {
            font-size: 1rem;
        }

        .footer-title {
            margin-bottom: 30px;
        }

        .footer-links {
            padding: 50px 0 0 0;
            color: #ffff;
        }

        .footer1 {
            position: relative;
            background-color: #C70202;
            color: #ffff;
            bottom: 0;
            padding: 0;
            margin: 0;
            overflow: hidden;
            width: 100%
        }



        .d-block {
            display: block !important;
        }

        .font-serif {
            font-family: "Baker", "Fraunces", serif;
        }

        .logo {
            width: 140px;
            padding: 0px 10px 0px 30px;
            float: left;
        }

        .text-blue {
            color: #003366 !important;
        }

        .logo-footer {
            width: 50%;
            position: absolute;
            top: 10%;
            right: -5%;
            opacity: 0.7;
        }

        .footer-bottom {
            position: relative;
            padding: 25px 0;
            /* background: #000000; */
        }

        .list-unstyled {
            padding-left: 0;
            list-style: none;
        }
